<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerHorizontal="true"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/exterior_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/exterior_bgdialog"
        android:orientation="vertical" >

        <TableRow
            android:id="@+id/exteriorRow01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/exteriorBackBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_button"
                android:text="@string/back"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow
            android:id="@+id/exteriorRow02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/exteriorLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/exterior"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </TableRow>

        <TableRow
            android:id="@+id/exteriorRow03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/colorCb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/outside_color"
                android:onClick="onClickChecked"
                android:tag="exterior-0" />

            <CheckBox
                android:id="@+id/tiresCb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/outside_tires"
                android:onClick="onClickChecked"
                android:tag="exterior-1" />
            
        </TableRow>

        <TableRow
            android:id="@+id/exteriorRow04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/windowCb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/outside_window"
                android:onClick="onClickChecked"
                android:tag="exterior-2" />

            <CheckBox
                android:id="@+id/LightCb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/outside_light"
                android:onClick="onClickChecked"
                android:tag="exterior-3" />
		</TableRow>
		
        <TableRow
            android:id="@+id/exteriorRow05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <CheckBox
                android:id="@+id/door_hoodCb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/outside_doorHood"
                android:onClick="onClickChecked"
                android:tag="exterior-4" />

            <CheckBox
                android:id="@+id/sealCb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/outside_seal"
                android:onClick="onClickChecked"
                android:tag="exterior-5" />
        </TableRow>

        <TableRow
            android:id="@+id/exteriorRow06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/handJackCb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/outside_jack"
                android:onClick="onClickChecked"
                android:tag="exterior-6" />

            <CheckBox
                android:id="@+id/tirePartCb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/outside_tirePart"
                android:onClick="onClickChecked"
                android:tag="exterior-7" />
		</TableRow>
            

        <TableRow
            android:id="@+id/tpowerRow07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <CheckBox
                android:id="@+id/wrenchCb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="30dp"
                android:text="@string/outside_wrench"
                android:onClick="onClickChecked"
                android:tag="exterior-8" />
        </TableRow>

     
    </TableLayout>

</RelativeLayout>