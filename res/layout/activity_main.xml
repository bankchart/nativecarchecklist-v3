            android:layout_marginLeft="1100dp" / -->

        <fragment
            android:id="@+id/power_fm"
            android:name="com.example.nativecarchecklist.Power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp" />

        <fragment
            android:id="@+id/exterior_fm"
            android:name="com.example.nativecarchecklist.Exterior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp" />

        <fragment
            android:id="@+id/interior_fm"
            android:name="com.example.nativecarchecklist.Interior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp" />

        <fragment
            android:id="@+id/document_fm"
            android:name="com.example.nativecarchecklist.Document"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp" />
        
        <fragment 
            android:id="@+id/setting_fm"
            android:name="com.example.nativecarchecklist.Setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"/>
    </LinearLayout>

